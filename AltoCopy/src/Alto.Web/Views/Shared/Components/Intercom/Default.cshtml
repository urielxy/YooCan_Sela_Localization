<script>
    window.intercomSettings = {
        app_id: "@Model.AppId",
        custom_launcher_selector: ".intercom-launcher"
        @if(!string.IsNullOrEmpty(Model.Email))
        {
            <text>,name: "@Model.Name",</text>
            if(Model.MembershipExpiryDate.HasValue)
            {
                <text>
                    "membership_expiry_at": @Model.MembershipExpiryDate?.ToUnixTimeSeconds(),
