@using Yooocan.Models.ServiceProviders
@using Yooocan.Logic.Extensions
@model ServiceProvidersCategoryModel
@{
    var canonicalUrl = Url.RouteUrl("CategoryServiceProvider", new { Model.Id, categoryName = Model.Name.ToCanonical() }, "https");
    ViewBag.Title = $"{Model.Name} service providers feed";
}
@section head {
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content="yoocan" />
    <meta property="og:image" content="@Html.Raw(Model.HeaderImageUrl)" />
    <meta property="og:image:secure_url" content="@Html.Raw(Model.HeaderImageUrl)" />
    @*<meta property="og:image:width" content="1140" />
        <meta property="og:image:height" content="250" />*@
    <meta name="twitter:title" property="og:title" itemprop="title name" content="@($"yoocan {Model.Name} service providers feed")" />
    <meta name="twitter:description" property="og:description" itemprop="description" content="@($"Browse service providers related to {Model.Name}")" />
    <meta name="description" content="@($"Browse service providers related to {Model.Name}")" />
    <meta property="og:url" content="@canonicalUrl" />
    <meta name="twitter:card" content="summary_large_image">
    <link rel="canonical" href="@canonicalUrl" id="canonicalUrl" />
    <embedCss href="/css/feed/Category.css" />
}
@Html.Partial("_CategoryHeader", Model)
<div class="container">
    <div class="row">
        <embedCss href="/css/feed/storyCard.css" />
        <div class="feed">
            @Html.Partial("_CategoryCards", Model.ServiceProviders)
        </div>
    </div>
    @Html.Partial("_LoadMoreButton", Url.Action("MoreFromCategory", "ServiceProvider", new { Model.Id }))
</div>
@section Scripts{
    <script src="/dist/ServiceProvider/Category.js" asp-append-version="true"></script>
}
