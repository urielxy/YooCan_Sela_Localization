@model IEnumerable<Yooocan.Models.VendorListModel>

@{
    ViewBag.Title = "Vendors";
}
<h2>Vendors</h2>

<p>
    @Html.ActionLink("Create New", "CreateOld", "Vendor")
</p>
<div>
    <a asp-controller="Vendor" asp-action="Index" asp-route-showDeleted="@(!ViewBag.ShowDeleted)" class="btn btn-warning">
        @(ViewBag.ShowDeleted ? "Hide" : "Show") deleted vendors
    </a>
</div>
<br />
<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Website URL
        </th>
        <th>
            Edit Commercial Terms
        </th>
        <th>
            Status
        </th>
        <th>
            Delete
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a asp-controller="Vendor" asp-action="MyProducts" asp-route-id="@item.Id" target="_blank">@item.Id</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td width="200px">
                @Html.DisplayFor(modelItem => item.WebsiteUrl)
            </td>
            <td>
                <a asp-controller="Admin" asp-action="SetVendorCommercialTerms" asp-route-isExisting="true"
                   asp-route-id="@item.Id" class="btn btn-@(!item.HasSignedUp ? "warning" : "success")" target="_Blank">
                    Edit Business Terms
                </a>
                <br /><a asp-controller="Vendor" asp-action="SignUp" asp-route-id="@item.Id">Contract</a>
            </td>
            <td>
                @if (!item.HasSignedUp)
                {
                    <span>Pending Sign Up</span>
                }
                else if (!item.HasUploadedProducts)
                {
                    <span>Pending Upload Products</span>
                }
                else
                {
                    <a asp-controller="Vendor" asp-action="MyProducts" asp-route-id="@item.Id">Products Uploaded</a>
                }
            </td>
            <td>
                <form asp-controller="Vendor" asp-action="@(item.IsDeleted ? "Undelete" : "Delete")" method="post">
                    <input name="id" value="@item.Id" type="hidden" />
                    <button type="submit"
                            onclick="return confirm('Are you sure you wish to @(item.IsDeleted ? "Undelete" : "Delete") vendor: @item.Name?');"
                            class="btn btn-danger">
                        @(item.IsDeleted ? "Undelete" : "Delete")
                    </button>
                </form>
            </td>
        </tr>
    }

</table>
@section Scripts {
    <script>
        document.body.style.backgroundColor = "#e9e9e9";
    </script>
}