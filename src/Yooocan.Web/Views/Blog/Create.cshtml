@model Yooocan.Models.Blog.CreatePostModel
@{
    ViewBag.Title = "Create/Edit blog post";
}
@section head {
    <embedCss href="/css/Blog/Create.css" />
    <link rel="stylesheet" href="/lib/croppie/croppie.css" />
}
<h1 class="center">Create/Edit post</h1>
<form method="post">
    <input type="hidden" asp-for="HeaderImageUrl" />
    <div class="profile-basic-info" id="header-image-uploader" data-upload-url="@Url.Action("UploadDataUriImages", "Image")">
        <div class="header picture-preview" style="background-image: url('@Model?.HeaderImageUrl')">
            <input type="hidden" class="picture-data-uri" id="headerImageDataUri" />
            <div class="content center">
                <h3 class="title"></h3>
                <button class="waves-effect waves-teal btn upload-picture-button center" type="button" id="choose-cover">CHOOSE COVER</button>
                <input type="file" class="picture-upload" accept="image/*" style="display: none;" />
                <div id="story-meta">
                    @*<i class="material-icons">watch_later</i><span class="date">@DateTime.UtcNow.ToString("MMMM dd yyyy hh:mm tt")</span>
                        <i class="material-icons fav">favorite</i>
                        <span class="fav-count">0</span>
                        <img src="/images/chat-story.svg" asp-append-version="true" id="chat-icon" />
                        <span class="comments-count">0</span>*@
                </div>
            </div>
        </div>
    </div>
    <div class="modal" id="preview-header-modal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="crop-preview"></div>
                <div class="center" style="padding-bottom: 15px">
                    <button type="button" class="take-picture btn btn-primary">Looks good</button>
                    <button type="button" class="close-modal btn btn-default">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col s8">
                <div class="input-field">
                    <input asp-for="Title" />
                    <label asp-for="Title"></label>            
                    <span asp-validation-for="Title" class="red-text"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s8">
                <div class="input-field">
                    <input asp-for="Description" />
                    <label asp-for="Description"></label>
                    <span asp-validation-for="Description" class="red-text"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s8">
                <div class="input-field">
                    <textarea asp-for="Content" data-upload-url="@Url.Action("UploadImageMce", "Image")"></textarea>
                    <label asp-for="Content" id="content-label"></label>
                </div>
            </div>
        </div>
        <div>
            <input type="submit" class="btn" />
        </div>
    </div>
</form>
@section scripts {
    <script src='https://cdn.tinymce.com/4/tinymce.min.js' asp-fallback-src="/lib/tinymce/tinymce.js" asp-fallback-test="window.tinymce"></script>
    <script src="/dist/Blog/create.js" asp-append-version="true"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
}