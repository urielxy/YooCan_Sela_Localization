<h2>Set service providers</h2>
<h4 class="text-center">@ViewBag.Title (@ViewBag.Id)</h4>
<form asp-action="StoryServiceProviders" method="post" class="form-horizontal">
    <div class="form-group" style="margin-top: 30px;">
        <label for="serviceProviderIds" class="col-md-3 control-label">Service providers</label>
        <div class="col-md-9">
            <input name="serviceProviderIds" id="serviceProviderIds" placeholder="Comma separated" class="form-control" value="@ViewBag.ServiceProviders" />
        </div>
    </div>

    <input type="submit" class="btn btn-primary col-md-offset-3" value="Save changes" />
</form>