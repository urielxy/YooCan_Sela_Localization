@{
    ViewBag.Title = "FAQ";
    var serviceProviderId = User.FindFirst(claim => claim.Type.StartsWith("serviceProvider"));
}
@section head {
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content="yoocan" />
    <meta property="og:image:secure_url" content="https://yoocanfind.com/images/faqHeader.jpg" />
    <meta property="og:image:width" content="1140" />
    <meta property="og:image:height" content="250" />
    <meta property="og:url" content="@Url.RouteUrl("FAQ", null, "https")" />
    <meta name="twitter:title" property="og:title" itemprop="title name" content="yoocan - FAQ" />
    <meta name="twitter:description" property="og:description" itemprop="description" content="All your questions about the website, content, registration and payment answered" />
    <meta name="description" content="All your questions about the website, content, registration and payment answered" />
    <meta name="twitter:card" content="summary_large_image">
    <style>
        .bg-image {
            background-image: url('/images/faqHeader.jpg?v=1');
        }

        #textOnImage {
            top: 30% !important;
        }

        #mainBody #faq {
            margin-top: 40px;
        }

        #faq header {
            background-image: linear-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1)), url(/images/faqHeader.jpg?v=1);
            background-size: cover;
            background-position: center;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 250px;
        }

            #faq header h1 {
                color: #fff;
                font-size: 34px;
                text-align: center;
            }

        #faq .panel-heading {
            min-height: 0;
            line-height: normal;
        }

        #faq .panel-title {
            font-weight: bold;
            font-size: 18px;
            margin: 15px 0;
            height: 100%;
            line-height: 1.2;
        }

            #faq .panel-title a {
                padding-left: 25px;
                padding-right: 26px;
                position: relative;
                display: inline-block;
                vertical-align: middle;
                color: #333;
            }

                #faq .panel-title a span {
                    display: inline;
                    vertical-align: middle;
                }

                #faq .panel-title a:before {
                    color: #878787;
                    content: '+';
                    font-size: 30px;
                    vertical-align: middle;
                    display: inline-block;
                    margin-right: 15px;
                }

                #faq .panel-title a.open:before {
                    color: #000;
                    content: '-';
                    margin-right: 15px;
                }

        #faq .panel-body {
            padding: 15px 26px 15px 40px;
            font-size: 16px;
        }

            #faq .panel-body ul {
                padding: 0;
            }

                #faq .panel-body ul li {
                    margin-top: 10px;
                }

        #goto-aboutus-btn {
            background-color: transparent;
            position: absolute;
            margin: auto;
            text-align: center;
            left: 0;
            right: 0;
            width: 120px;
            height: 40px;
            top: -120px;
            border: solid 2px white;
            border-radius: 7px;
            line-height: 2.7;
            color: white;
            cursor: pointer;
        }

            #goto-aboutus-btn:hover {
                color: gray;
                background-color: white;
                text-decoration: none;
            }

        @@media (max-width: 767px) {
            #textOnImage {
                margin-top: 10px !important;
            }
        }

        @@media (max-width: 380px) {
            #textOnImage {
                margin-top: -20px !important;
                font-size: 2.4em;
            }

            #goto-aboutus-btn {
                top: -100px;
            }
        }
    </style>
}
