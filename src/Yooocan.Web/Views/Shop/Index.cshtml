@using Yooocan.Models.Shop
@using Yooocan.Logic.Extensions
@model ShopHomeModel
@{
    ViewBag.Title = "Shop";
}
@section head {
    @*<meta property="og:type" content="article" />
    <meta property="og:site_name" content="yooocan" />
    <meta property="og:image" content="" />
    <meta property="og:image:secure_url" content="" />
    <meta property="og:image:width" content="1140" />
    <meta property="og:image:height" content="250" />
    <meta name="twitter:card" content="summary_large_image">    *@
    <meta name="description" property="og:description" itemprop="description" content="The world’s most comprehensive online shopping source to find and buy relevant products for people with disabilities." />
    <embedCss href="/css/shop/home.css" />
}

<div id="shop-home">
    <h1>YOOCAN SHOP</h1>
    <div class="container">
        <h2 class="hide-on-small-only">SHOP CATEGORIES</h2>
        <div class="row">
            @foreach (var category in Model.Categories)
            {
                <div class="col s6 m3">
                    <a asp-action="Category" asp-route-id="@category.CategoryId" asp-route-categoryName="@category.CategoryName.ToCanonical()">
                        <div class="shop-category">
                            <div class="shop-category-content">
                                <div class="product-image">
                                    <img src="@category.HeaderPictureUrl" alt="Sample product image from @category.CategoryName" />
                                </div>
                                <div class="color-overlay" style="background-image: linear-gradient(#@category.ShopBackgroundColor, #@category.ShopBackgroundColor);">
                                </div>
                                <h3>@category.CategoryName</h3>
                                <div class="shop-button">SHOP</div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>