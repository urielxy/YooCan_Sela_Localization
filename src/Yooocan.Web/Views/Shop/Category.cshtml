@using Yooocan.Logic.Extensions
@model CategoryShopModel
@{
    ViewBag.Title = Model.CategoryName + " Shop";
    var canonicalUrl = Url.RouteUrl("CategoryShop", new { Id = Model.CategoryId, CategoryName = Model.CategoryName.ToCanonical() }, "https");
}
@section Head {
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="yoocan" />
    <meta property="og:image" content="@Html.Raw(Model.HeaderPictureUrl)" />
    <meta property="og:image:secure_url" content="@Html.Raw(Model.HeaderPictureUrl)" />
    @*<meta property="og:image:width" content="1140" />
        <meta property="og:image:height" content="250" />*@
    <meta name="twitter:title" property="og:title" itemprop="title name" content="yoocan - shop" />
    <meta name="twitter:description" property="og:description" itemprop="description" content="@($"Shop and browse disability products relating to {Model.CategoryName}")" />
    <meta name="description" content="@($"Shop and browse disability products relating to {Model.CategoryName.ToCanonical()}")" />
    <meta name="twitter:card" content="summary_large_image">
    <meta property="og:url" content="@canonicalUrl" />
    <link rel="canonical" href="@canonicalUrl" id="canonicalUrl" />
}
@Html.Partial("_CategoryHeader", Model)
@* Todo: move to scss file *@
<style>
    .featured-product.card.single .category-name {
        display: none;
    }
</style>
<div class="container">
    <div class="row feed">
        <embedcss href="/css/home/featuredProduct.css"></embedcss>
        @foreach (var product in Model.Products)
        {
            <div class="col s12 m6 l3">
                @Html.Partial("../Home/_FeaturedProductCard", product)
            </div>
        }       
    </div>
    @Html.Partial("_LoadMoreButton", Url.Action("MoreCategoryProducts", "Shop", new { Id = Model.CategoryId }))
</div>
@section Scripts {
    <script src="/dist/Shop/Category.js"></script>
}
