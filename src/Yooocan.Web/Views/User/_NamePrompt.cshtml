<embedcss href="/css/User/NamePrompt.css"></embedcss>
<div style="display: none;">
    <div class="name-form-container">
        <form class="name-form">
            <div class="name-form-preloader">
                <div class="preloader-wrapper big active">
                    <div class="spinner-layer spinner-blue-only">
                        <div class="circle-clipper left">
                            <div class="circle"></div>
                        </div><div class="gap-patch">
                            <div class="circle"></div>
                        </div><div class="circle-clipper right">
                            <div class="circle"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <h6 class="red-text title">Please provide your name to be displayed in the chat room.</h6>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m6">
                    <div class="input-field">
                        <input required id="NamePromptFirstName" name="FirstName" class="validate">
                        <label for="NamePromptFirstName">First Name</label>
                    </div>
                </div>
                <div class="col s12 m6">
                    <div class="input-field">
                        <input id="NamePromptLastName" name="LastName">
                        <label for="NamePromptLastName">Last Name</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <button type="button" class="btn waves-effect submit">Save</button>
                </div>
            </div>
        </form>
    </div>   
</div>
<script src="/dist/User/NamePrompt.js" asp-append-version="true"></script>